@model paramotor.Models.IndexViewModel
@{
	int i=0;
}
<!--================Mission Area =================-->
		<section class="mission_area">

	@if (Model.Abouts!.Count()>0)
	{
			@foreach (var item in Model.Abouts!)
			{
					@if (i%2==0)
					{

						<div class="row m0">
							<div class="col-lg-6 p0">
									<div class="item">
										<div class="mission_text">
											<h4>@item.Title</h4>
											<p>@item.Detail</p>
										</div>
										
									</div>
									
							</div>
							<div class="col-lg-6 p0">
								<div class="left_img"><img src="~/uploads/images/@item.Image" alt=""></div>
							</div>
						</div>	

					}else {
						<div class="row m0">

								<div class="col-lg-6 p0">
								<div class="left_img"><img src="~/uploads/images/@item.Image" alt=""></div>
							</div>
							<div class="col-lg-6 p0">
									<div class="item">
										<div class="mission_text">
											<h4>@item.Title</h4>
											<p>@item.Detail</p>
										</div>
										
									</div>
									
							</div>
						</div>	

					}
				i++;
			}
			
	}
		</section>

	<!--================End Mission Area =================-->